<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background">

        <include layout="@layout/bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y30"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:padding="@dimen/x4"
                android:text="网络配置"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginBottom="@dimen/y6"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSvr"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/x22"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="服务器" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_spinner">

                    <Spinner
                        android:id="@+id/spServer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </FrameLayout>


            </LinearLayout>
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbOffice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="办公网"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etOfficeIp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_spinner"
                    android:singleLine="true"
                    android:text="http://10.5.198.53/hwbdwms/"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:text="生产网"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etPro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_spinner"
                    android:enabled="false"
                    android:singleLine="true"
                    android:text="http://172.16.18.53/hwbdwms/"
                    android:textSize="18sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_btn_unquanlified"
                    android:text="保存" />

                <Button
                    android:id="@+id/btnDefault"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x10"
                    android:background="@drawable/selector_btn_unquanlified"
                    android:text="重置默认数据" />

            </LinearLayout>

            <Button
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y10"
                android:background="@drawable/selector_btn_unquanlified"
                android:text="正确"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y10"
                android:background="@drawable/selector_btn_unquanlified"
                android:text="报错"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/red" />

        </LinearLayout>

    </RelativeLayout>
</layout>
